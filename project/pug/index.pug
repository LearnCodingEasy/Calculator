doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Calculator
    link(rel="stylesheet" href="css/style.css")
  body 
    section
      div(class="container") 
        div(class="calculator")
        div(class="display")
          div(class="display-1") 0
          div(class="display-2") 0
          div(class="temp-result")
        div(class="all_button")
          div(class="button all-clear" title="Clear") C
          div(class="button last-entity-clear") CE
          div(class="button operation") %
          div(class="button operation") /
          div(class="button number") 7
          div(class="button number") 8
          div(class="button number") 9
          div(class="button operation") x
          div(class="button number") 4
          div(class="button number") 5
          div(class="button number") 6
          div(class="button operation") -
          div(class="button number") 1
          div(class="button number") 2
          div(class="button number") 3
          div(class="button operation") +
          div(class="button btn-0 number") 0
          div(class="button number dot") .
          div(class="button equal") =
  script(src="js/script.js")  
  script(src="http://localhost:35729/livereload.js")